{
  "name" : "colorpik",
  "version" : "0.1",
  "description" : "color picker extension",
  "manifest_version" : 2,
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/content.js"]
  }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    //"default_icon": "icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "bborder"
  }
}
